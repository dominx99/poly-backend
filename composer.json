{
    "require": {
        "slim/slim": "^3.12",
        "php-di/php-di": "^6.0",
        "php-di/slim-bridge": "^2.0",
        "vlucas/phpdotenv": "^3.3",
        "doctrine/orm": "^2.6",
        "doctrine/migrations": "^2.0",
        "ramsey/uuid-doctrine": "^1.5",
        "firebase/php-jwt": "^5.0",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Wallet\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "doctrine": "php doctrine.php",
        "sniffer": "vendor/bin/phpcs --standard=psr2 src/"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.1"
    }
}
